@import url("dark_theme.uss");
@import url("global.uss");

.time-scale {
    overflow: hidden;
    height: 50px;
}

.time-scale__ticks {
    width: 100%;
    height: 50%;
}

.time-scale__labels {
    width: 100%;
    flex-grow: 0;
    flex-shrink: 1;
    height: 50%;
}

.time-label {
    right: 50%;
}

.time-label--disabled {
    color: rgb(72, 72, 72);
}